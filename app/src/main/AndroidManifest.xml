<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.phonemaster">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /> -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.GET_PACKAGE_SIZE" />
    <uses-permission
        android:name="android.permission.CLEAR_APP_CACHE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission
        android:name="android.permission.MODIFY_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_luncher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_luncher"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".activities.ProcessorDetailAct"></activity>
        <activity android:name=".activities.SensorListAct" />
        <activity android:name=".activities.RootCheckerAct" />
        <activity
            android:name=".activities.DeviceInfoAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.SplashActivity"
            android:launchMode="singleInstance"
            android:theme="@style/SplashNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FilesMoverAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.JunkFilesAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.ChargingLockedScreenAct"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:screenOrientation="sensorPortrait"
            android:showOnLockScreen="true" />
        <activity
            android:name=".activities.FastChargeAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.FullChargedRemindAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.SmartChargingAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.DeepCleanAllPackagesAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.DeepCleanAllDocsAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.DeepCleanAllAudiosAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.DeepCleanAllVideosAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.DeepCleanAllImagesAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.DeepCleanAppDataAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.DeepCleanAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.UnInstallAppAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.BatterySavingAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.HarassmentFilterAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.OnImageVideoAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.WhatsAppStatusAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.PhoneBoostAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.CpuCooler"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.WhatsAppDocumentsListAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.WhatsAppBackUpConversationHistory"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.WhatsAppVideosListAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.WhatsAppImagesListAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.WhatsAppAudioListAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.CleanWhatsAppAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.InternetSpeedAct"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleInstance" />

        <receiver
            android:name=".receivers.BootUpReceiver"
            android:enabled="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receivers.FastChargingChargerReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.SmartChargeService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>